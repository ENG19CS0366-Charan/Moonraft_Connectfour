#we simulate the gravity : the token is fallen to the board.
def ComputeNewState(action,M,boardstate):
    y=0
    x=action

    if M[y,x]!=0:
        return -1,x,y

    while y<M.shape[0] and M[y,x]==0:
        y=y+1


    if y>0:
        y=y-1

    newagentstate=getAgentStateFromXY(x,y,boardstate)
    return newagentstate,x,y

